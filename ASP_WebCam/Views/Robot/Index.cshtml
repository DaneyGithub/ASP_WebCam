@model ASP_WebCam.Models.RobotModel

@{
    ViewBag.Title = "Index";
}



<div class="row">

    <div class="col-md-6">
        <video controls height="330" width="500" loop="loop">
         <source src="~/@Model.VideoFileE" type="video/mp4">
        </video>
    </div>

    <div class="col-md-6">
        <img src="~/Content/image.jpg" width="500" height="330" />
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        @using (Html.BeginForm("Start", "Robot"))
        {
            <input id="buttonStart" type="submit" name="start" value="Start" />

        }
    </div>
    <div class="col-md-2">

        @using (Html.BeginForm("Stop", "Robot"))
        {
            <input id="buttonStop" type="submit" name="stop" value="Stop" />
        }
    </div>

    <div class="col-md-2">

        @using (Html.BeginForm("Webcam", "Robot"))
        {
            <input id="buttonWebcam" type="submit" name="webcame" value="Webcam" />
        }
    </div>
</div>


